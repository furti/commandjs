{
    "filesGlob": [
        "./source/**/*.ts",
        "./typings/**/*.ts"
    ],
    "compilerOptions": {
        "outDir": "build",
        "noImplicitAny": true,
        "target": "es5",
        "module": "commonjs",
        "removeComments": true
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2,
        "newLineCharacter": "\r\n",
        "convertTabsToSpaces": true
    },
    "files": [
        "./source/dist/CommandExecutor.ts",
        "./source/dist/Export.ts",
        "./source/spec/prepare-commands.spec.ts",
        "./typings/commandjs/command-definitions.d.ts",
        "./typings/jasmine/jasmine.d.ts",
        "./typings/node/node.d.ts",
        "./typings/tsd.d.ts"
    ]
}
