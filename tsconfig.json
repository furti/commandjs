{
    "filesGlob": [
        "./source/**/*.ts",
        "./typings/**/*.ts"
    ],
    "compilerOptions": {
        "outDir": ".",
        "noImplicitAny": true,
        "target": "es5",
        "module": "commonjs",
        "removeComments": true
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2,
        "newLineCharacter": "\r\n",
        "convertTabsToSpaces": true,
        "placeOpenBraceOnNewLineForFunctions": true,
        "placeOpenBraceOnNewLineForControlBlocks": true
    },
    "files": [
        "./source/dist/command-executor.ts",
        "./source/dist/index.ts",
        "./source/dist/states.ts",
        "./source/spec/command-parser.spec.ts",
        "./source/spec/execute-command.spec.ts",
        "./source/spec/get-command.spec.ts",
        "./source/spec/helpers/execute-function-helper.ts",
        "./source/spec/helpers/response-validator-helper.ts",
        "./source/spec/prepare-commands.spec.ts",
        "./typings/commandjs/command-definitions.d.ts",
        "./typings/commandjs/peg.d.ts",
        "./typings/jasmine/jasmine.d.ts",
        "./typings/node/node.d.ts",
        "./typings/tsd.d.ts"
    ]
}
