{
    "filesGlob": [
        "./source/**/*.ts",
        "./definitions/**/*.ts"
    ],
    "compilerOptions": {
        "outDir": "build",
        "noImplicitAny": true,
        "target": "es5",
        "module": "commonjs",
        "removeComments": true
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2,
        "newLineCharacter": "\r\n",
        "convertTabsToSpaces": true
    },
    "files": [
        "./source/CommandExecutor.ts",
        "./source/Export.ts",
        "./definitions/command-definitions.d.ts"
    ]
}
